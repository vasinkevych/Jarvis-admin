{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "noLib": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "@types",
    "unit-tests",
    "client",
    "prettier.config.js",
    "ecosystem.config.js"
  ]
}
