{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["koa", "plugin:prettier/recommended", "plugin:react/recommended"],
  "plugins": ["mocha", "react"],
  "rules": {
    "mocha/no-exclusive-tests": "error"
  },
  "env": {
    "mocha": true,
    "es6": true,
    "browser": true
  }
}
